<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Sustainable_Page">


    <ImageButton
        android:id="@+id/backbtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/backshape"
        app:srcCompat="@drawable/backk" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:layout_marginTop="30dp"
        android:text="How sustainable is your product?" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Calculate the carbon footprint of your favourite\nproducts." />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="wrap_content"
        android:text="Material" />

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="380dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="100dp"
             />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Quantity" />

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="380dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:background="@drawable/signupbtn"
        android:backgroundTint="@color/blue"
        android:text="Next" />

</LinearLayout>